<application>
    <name>Reactrl_Replaying</name>

    <dependencies>
    </dependencies>
  
    <module>
        <name>yarpdataplayer</name>
	<parameters>--withExtraTimeCol 2</parameters>
        <node>localhost</node>
        <stdio></stdio>
        <tag>dataPlayer</tag>
    </module>

    <module>
        <name>iCubGui</name>
	<parameters></parameters>
        <node>localhost</node>
        <stdio></stdio>
        <tag>iCubGui</tag>
    </module>

  
    <connection>
        <from>/reactController/gui:o</from>
	<to>/iCubGui/objects</to>
        <protocol>udp</protocol>
    </connection>
    
    <connection>
    	<from>/icub/head/state:o</from>
    	<to>/iCubGui/head:i</to>
    	<protocol>udp</protocol>
    </connection>
  
    <connection>
    	<from>/icub/left_arm/state:o</from>
    	<to>/iCubGui/left_arm:i</to>
    	<protocol>udp</protocol>
    </connection>
  
    <connection>
    	<from>/icub/right_arm/state:o</from>
    	<to>/iCubGui/right_arm:i</to>
    	<protocol>udp</protocol>
    </connection>
   
    <connection>
    	<from>/icub/torso/state:o</from>
    	<to>/iCubGui/torso:i</to>
    	<protocol>udp</protocol>
    </connection>


</application>
